/* pages/card/list.wxss */
.main {
  background-color: #F6F6F7;
  width: 100%;
  margin: 0px;
  padding: 0px;
}
.groupTitle{
  color: #B7BABF;
  margin-left: 12px; 
  /* padding-top:12px; */
  font-size: 24rpx;
  height:17px;
  line-height: 17px;
}
.groupTitleNoPadding {
  margin-left: 12px; 
  color: #B7BABF;
  padding-top:0px;
  font-size: 24rpx;
  height:17px;
  line-height: 17px;
}
.group{
  /* margin-left: 12px; */
  margin-right: 12px;
  margin-bottom: 0px;
  margin-top: 12px;
  padding: 0px;
}
.content {
    display: flex;
    /* background-color: #FFFFFF; */
    padding: 0px;
    margin-top:12px;
    height: 83px;
    width: 100%;
    overflow: hidden;
}
.contentLeft {
  position: absolute;
  overflow:hidden;
  text-overflow:ellipsis;
  transition: left 0.2s ease-in-out;
  z-index: 5;
  background-color: #FFFFFF;
  height: 83px;
  width:100%;
  margin-right:12px;
  margin-left: 12px;
  border-radius: 4px;
}
.contentRight {
  z-index: 4;
  right:12px; 
  position: absolute;
  vertical-align: middle;
  align-items: center;
  display: flex;
  background-color: #F6F6F7;
  width: 72px;
  height: 83px;
  padding: 0px;
  margin-right:20px;
}
.cardContent{
  color: #282A2D;
  font-size: 30rpx;
  height: 21px;
  line-height: 21px;
  padding-top:10px;
  padding-left: 20px;
  overflow: hidden;
}
.cardTitle{
  height: 17px;
  line-height: 17px;
  font-size: 24rpx;
  color: #B7BABF;
  padding-top:15px;
  padding-left: 20px;
  display:flex;
  vertical-align: middle;
}
.cardSep{
  display:block;
  margin-left: 10px;
  margin-right: 10px;
  height: 8px;
  margin-top: 4px;
  line-height: 8px;
  width:0px;
  border-left: 1px solid #D2D4D7;
}

.bottomLoading{
  width:100%;
  height: 80px;
}
.cardCreate {
  position: fixed;
  bottom: 12px;
  right: 12px;
  z-index: 10;
}
.noData{
  text-align: center;
  font-size: 30rpx;
  color: #B7BABF;
  padding-top:150px;
  line-height: 21px;
  height: 21px;
}
.noMore{
  text-align: center;
  font-size: 24rpx;
  color: #B7BABF;
  margin-top: 40px;
  padding: 0px;
}
.noMoreImg{
  margin: 0px;
  padding: 0px;
}
.popMenu
{
  top:185px;
  position: fixed;
  width:280px;
  height:105px;
  background: #FFFFFF;
  box-shadow: 0 2px 11px 0 rgba(0,0,0,0.10);
  border-radius: 4px;
}
.genCard{
  vertical-align: middle;
  height:53px;
  line-height: 53px;
  font-size: 30rpx;
  color: rgba(0,0,0,0.87);
  border-bottom: solid 1px #D8D8D8;
  padding-left: 25px;
}
.deleteCard{
  vertical-align: middle;
  height:52px;
  line-height: 52px;
  font-size: 30rpx;
  color: rgba(0,0,0,0.87);
  padding-left: 25px;
}
.deleteMenu
{
  top:185px;
  position: fixed;
  width:280px;
  height:113px;
  background: #FFFFFF;
  box-shadow: 0 2px 11px 0 rgba(0,0,0,0.10);
  border-radius: 4px;
}
.deleteConfirm{
  vertical-align: middle;
  height:62px;
  line-height: 62px;
  font-size: 30rpx;
  color: rgba(0,0,0,0.87);
  border-bottom: solid 1px #D8D8D8;
  text-align: center;
}
.deleteBar{
  text-align: center;
  display: flex;
  vertical-align: middle;
  height:50px;
  line-height: 50px;
  font-size: 30rpx;
  color: rgba(0,0,0,0.87);
}

.deleteCardImg{
  width:32px;
  height:32px;
  padding-left: 20px;
}

.footer {
  text-align: center;
  position: fixed;
  bottom: 20px;
  font-size: 24rpx;
  line-height: 17px;
  color: #B7BABF;
  width: 100%;
}
