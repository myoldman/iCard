<form bindsubmit='preivewCard'>
 
  <view id="current" class="{{currentBgCss}} {{currentCss}}" style="{{currentStyle}};background-size:{{100/ratio}}%"></view>
  <view id="next" class="{{nextBgCss}} {{nextCss}}" style="{{nextStyle}};background-size:{{100/ratio}}%"></view>
  <image style="position:fixed;top:0px;right:0px;width:{{bgImgWidth/ratio}}px;height:{{bgImgHeight/ratio}}px;" mode='aspectFit' src="{{bgImgUrl}}"></image>
  <textarea value='{{content}}' bindtouchcancel='handletouchcancel' bindtouchmove='handletouchmove' bindtouchstart='handletouchtart' bindtouchend='handletouchend' style='height:{{height-45-45}}px;' maxlength="-1" class="content" show-confirm-bar='{{showConfirm}}' name='content' placeholder="左右滑动切换模板，点击输入卡片内容。支持Markdown的# 标题、> 引用、- 列表、**加粗**语法。" placeholder-class='placeholder'></textarea>
  <view id="bottomBar" style="position:fixed;bottom:20px;display:flex;width:100%;">
<button id="genButton" class="bottomBarButton" style="left:20px;width:{{genButtonWidth}}px;background: #B7BABF;" form-type='submit'>保存并生成分享图</button>
<button id="saveButton" class="bottomBarButton" style="left:35px;width:{{saveButtonWidth}}px;background: #30CEAC;" class="bottomBarButton" form-type='submit'>保存卡片</button>
</view>
</form>

