/* pages/card/list.wxss */

.main {
  background-color: #f6f6f7;
  width: 100%;
  margin: 0px;
  padding: 0px;
}

.groupTitle {
  color: #b7babf;
  margin-left: 12px;
  padding-top: 8px;
  font-size: 12px;
  height: 17px;
  line-height: 17px;
}

.groupTitleNoPadding {
  margin-left: 12px;
  color: #b7babf;
  padding-top: 0px;
  font-size: 12px;
  height: 17px;
  line-height: 17px;
}

.group {
  /* margin-left: 12px; */
  margin-right: 12px;
  margin-bottom: 0px;
  margin-top: 12px;
  padding: 0px;
}

.content {
  display: flex;
  /* background-color: #FFFFFF; */
  padding: 0px;
  margin-top: 12px;
  height: 78px;
  width: 100%;
  overflow: hidden;
}

.contentLeft {
  position: absolute;
  overflow: hidden;
  text-overflow: ellipsis;
  transition: left 0.2s ease-in-out;
  z-index: 5;
  background-color: #fff;
  height: 78px;
  width: 100%;
  margin-right: 12px;
  margin-left: 12px;
  border-radius: 4px;
}

.contentRight {
  z-index: 4;
  right: 12px;
  position: absolute;
  vertical-align: middle;
  align-items: center;
  display: flex;
  background-color: #f6f6f7;
  width: 72px;
  height: 78px;
  padding: 0px;
}

.cardContent {
  color: #282a2d;
  font-size: 15px;
  height: 21px;
  line-height: 21px;
  padding-top: 10px;
  padding-left: 20px;
  overflow: hidden;
  margin-right: 20px;
}

.cardTitle {
  height: 17px;
  line-height: 17px;
  font-size: 12px;
  color: #b7babf;
  padding-top: 15px;
  padding-left: 20px;
  display: flex;
  vertical-align: middle;
}

.cardSep {
  display: block;
  margin-left: 10px;
  margin-right: 10px;
  height: 8px;
  margin-top: 4px;
  line-height: 8px;
  width: 0px;
  border-left: 1px solid #d2d4d7;
}

.cardCreate {
  position: fixed;
  bottom: 12px;
  right: 12px;
  z-index: 10;
}

.noData {
  text-align: center;
  font-size: 15px;
  color: #b7babf;
  padding-top: 20px;
  line-height: 21px;
  height: 21px;
}

.noMore {
  text-align: center;
  font-size: 13px;
  color: #b7babf;
  margin-top: 40px;
  margin-bottom: 40px;
  padding: 0px;
}

.noMoreImg {
  margin: 0px;
  padding: 0px;
}

.loading {
  text-align: center;
  padding: 0px;
}

.noDataView {
  text-align: center;
  padding-top: 90px;
}

.noDataImg {
  height: 120px;
  width: 120px;
}

.bottomLoading {
  height: 24px;
  width: 24px;
  margin-top: 20px;
  margin-bottom: 20px;
}

.popMenu {
  top: 185px;
  position: fixed;
  width: 280px;
  height: 105px;
  background: #fff;
  box-shadow: 0 2px 11px 0 rgba(0, 0, 0, 0.10);
  border-radius: 4px;
}

.genCard {
  vertical-align: middle;
  height: 53px;
  line-height: 53px;
  font-size: 15px;
  color: rgba(0, 0, 0, 0.87);
  border-bottom: solid 1px #d8d8d8;
  padding-left: 25px;
}

.deleteCard {
  vertical-align: middle;
  height: 52px;
  line-height: 52px;
  font-size: 15px;
  color: rgba(0, 0, 0, 0.87);
  padding-left: 25px;
}

.deleteMenu {
  top: 185px;
  position: fixed;
  width: 280px;
  height: 113px;
  background: #fff;
  box-shadow: 0 2px 11px 0 rgba(0, 0, 0, 0.10);
  border-radius: 4px;
}

.deleteConfirm {
  vertical-align: middle;
  height: 62px;
  line-height: 62px;
  font-size: 15px;
  color: rgba(0, 0, 0, 0.87);
  border-bottom: solid 1px #d8d8d8;
  text-align: center;
}

.deleteBar {
  text-align: center;
  display: flex;
  vertical-align: middle;
  height: 50px;
  line-height: 50px;
  font-size: 15px;
  color: rgba(0, 0, 0, 0.87);
}

.deleteCardImg {
  width: 32px;
  height: 32px;
  padding-left: 20px;
}

.footer {
  text-align: center;
  position: fixed;
  bottom: 10px;
  font-size: 12px;
  line-height: 17px;
  color: #b7babf;
  width: 100%;
}

.searchView {
  background-color: #30ceac;
  width: 100%;
  height: 46px;
  display: flex;
}

.searchInput {
  background-color: #fff;
  height: 36px;
  padding-left: 6px;
  width: 100%;
}

.searchPlace {
  height: 21px;
  line-height: 21px;
  color: #b7babf;
  font-size: 15px;
  text-align: left;
  /* margin-left: 12px; */
}

.clearInput {
  /* right:12px; *//* top:0px; */
  z-index: 50;
  height: 36px;
  width: 40px;
  margin-right: 12px;
  background-color: #fff;
  border-top-right-radius: 4px;
  border-bottom-right-radius: 4px;
}

.clearIcon {
  padding-top: 10px;
  padding-left: 6px;
}

.searchIconView {
  width: 34px;
  background-color: #fff;
  height: 36px;
  margin-left: 12px;
  border-top-left-radius: 4px;
  border-bottom-left-radius: 4px;
}

.searchIcon {
  margin-left: 12px;
  margin-top: 10px;
  z-index: 50;
}
